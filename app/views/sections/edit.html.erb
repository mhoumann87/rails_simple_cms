<%= link_to("<< Back to List", sections_path, :class => "back-line") %>
<div class="sections edit">
  <h2>Update Section</h2>
  <%= form_for(@section) do |f| %>
    <table summary="Section form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Page ID</th>
        <td><%= f.text_field(:page_id) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%= f.text_field(:visible) %>
          </tr>
          <tr>
            <th>Content Type</th>
            <td><%= f.text_field(:content_type) %>
            </tr>
            <tr>
              <th>Content</th>
              <td><%= f.text_area(:content) %>
              </tr>
            </table>
            <div class="form_buttons">
              <%= f.submit("Update Section") %>
            </div>
          <% end %>
        </div>
