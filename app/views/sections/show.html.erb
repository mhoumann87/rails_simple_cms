<% @page_title = "Display Section" %>
<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => "back-line")%>
<div class="sections show">
  <h2>Show Section</h2>
  <table summary="Section detail view">
    <tr>
      <th>Name</th>
      <td><%= @section.name %>
      </tr>
      <tr>
        <th>Page ID</th>
        <td><%= @section.page_id %>
      </tr>
      <tr>
        <th>Position</h2>
        <td><%= @section.position %>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%= @section.visible ? "Yes" : "No" %></td>
        </tr>
        <tr>
          <th>Content Type</th>
          <td><%= @section.content_type %></td>
        </tr>
        <tr>
          <th>Content</th>
          <td><%= @section.content %></td>
        </tr>
      </table>
    </div>
