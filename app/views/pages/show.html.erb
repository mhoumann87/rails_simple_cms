<% @page_title = "Display Page" %>
<%= link_to("<< Back to list", pages_path, :class => "back-line") %>
<div class="page show">
  <h2>Show Page</h2>
  <table summary="Page detail view">
    <tr>
      <th>Name</th>
      <td><%= @page.name %>
      </tr>
      <tr>
        <th>Subject ID</th>
        <td><%= @page.subject_id %>
      </tr>
      <tr>
        <th>Permalink</th>
        <td><%= @page.permalink %>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @page.position %>
          </tr>
          <tr>
            <th>Visible</th>
            <td><%= @page.visible ? "Yes" : "No" %>
            </tr>
            <tr>
              <th>Created</th>
              <td><%= @page.created_at  %></td>
            </tr>
            <tr>
              <th>Updated</th>
              <td><%= @page.updated_at %></td>
            </tr>
          </table>
        </div>
