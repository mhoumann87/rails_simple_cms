<%= link_to("<< Back to List", pages_path, :class => "back-line") %>
<div class="pages edit">
  <h2>Update Page</h2>
  <%= form_for(@page) do |f| %>
    <table summary="Page from fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Subject ID</th>
        <td><%= f.text_field(:subject_id) %>
      </tr>
      <tr>
        <th>Permalink</th>
        <td><%= f.text_field(:permalink) %>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position) %>
          </tr>
          <tr>
            <th>Visible</th>
            <td><%= f.text_field(:visible) %></td>
          </tr>
        </table>
        <div class="form-buttons">
          <%= f.submit("Update Page") %>
        </div>
      <% end %>
    </div>
